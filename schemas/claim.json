{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://prompt-analyzer.example.com/schemas/claim.json",
  "title": "Semantic Claim",
  "description": "A semantic claim extracted from an instruction",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Schema version for future compatibility",
      "default": "1.0"
    },
    "claim_id": {
      "type": "string",
      "description": "Unique claim identifier"
    },
    "session_id": {
      "type": "string",
      "description": "Session identifier"
    },
    "event_id": {
      "type": "string",
      "description": "Source event identifier"
    },
    "modality": {
      "type": "string",
      "enum": ["must", "must_not", "should", "prefer", "avoid", "allowed"],
      "description": "Strength of the constraint"
    },
    "action": {
      "type": "string",
      "description": "Action being constrained (e.g., file_write, internet_access)"
    },
    "target": {
      "type": "string",
      "description": "Target of the action"
    },
    "conditions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Conditions under which this claim applies"
    },
    "exceptions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Exceptions to this claim"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Extraction confidence score"
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Verbatim quotes from instruction text",
      "minItems": 1
    }
  },
  "required": ["claim_id", "session_id", "event_id", "modality", "action", "target", "confidence", "evidence"]
}
