{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://prompt-analyzer.example.com/schemas/conflict.json",
  "title": "Instruction Conflict",
  "description": "A detected contradiction between claims",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Schema version for future compatibility",
      "default": "1.0"
    },
    "conflict_id": {
      "type": "string",
      "description": "Unique conflict identifier"
    },
    "session_id": {
      "type": "string",
      "description": "Session identifier"
    },
    "claims": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Claim IDs involved in this conflict",
      "minItems": 2
    },
    "severity": {
      "type": "string",
      "enum": ["hard", "soft", "scope", "style"],
      "description": "Severity of the conflict"
    },
    "explanation": {
      "type": "string",
      "description": "Human-readable explanation of the conflict"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Detection confidence score"
    }
  },
  "required": ["conflict_id", "session_id", "claims", "severity", "explanation", "confidence"]
}
